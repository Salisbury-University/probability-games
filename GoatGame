<script>
    const Doors = [0, 0, 0];
    const carLocation = Math.floor(Math.random() * 3);
    Doors[carLocation] = 1;
</script>


<title> Gamer moment</title>
<p id="goatLoc"></p>
<p id="result"></p>

<img src="ClosedDoro.png" onclick="chooseDoor(0)" width="300px" alt="Door 1" id="door0">
<img src="ClosedDoro.png" onclick="chooseDoor(1)" width="300px" alt="Door 2" id="door1">
<img src="ClosedDoro.png" onclick="chooseDoor(2)" width="300px" alt="Door 3" id="door2">

<script>
    var string = "Door 0: " + Doors[0] + "! Door 1: " + Doors[1] + "! Door 2: " + Doors[2];
    document.getElementById("goatLoc").innerHTML = string;

    function chooseDoor(x) {

        var revealGoat = x;
        //displays the other goat location
        while(revealGoat == x || revealGoat == carLocation){
            revealGoat = Math.floor(Math.random() * 3);
        }
        var revealDoor = "door"+revealGoat;
        document.getElementById(revealDoor).src = "goat.jfif"
        var stringToDisplay = "You selected door: " + (x) + " There is a goat at door: " + (revealGoat) + " Do you want to switch doors?";

        let choice = window.confirm(stringToDisplay);
        var doorChoice = x;
        if (choice) {

            var remainderDoor = 5;
            
            remainderDoor = remainderDoor -( x+ 1);
            remainderDoor = remainderDoor - (revealGoat + 1);

            doorChoice = remainderDoor;

        } 
        var tmp = "door"+carLocation;
        document.getElementById(tmp).src = "car.jfif"
        
        //having trouble revealing last door

        window.alert("Door selected: " + (doorChoice) + "Car was located at door: " + (carLocation));
    }
</script>


